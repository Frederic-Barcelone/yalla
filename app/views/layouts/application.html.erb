<!DOCTYPE HTML>
<html lang="en">
  <head>
    <title>Name</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <meta charset="utf-8">

    <!-- Le styles -->
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    "bootstrap.css" %>
    <%= stylesheet_link_tag    "bootstrap-responsive.css" %>
    <%= stylesheet_link_tag    "bootstrap.icon-large.css" %>
    <%= stylesheet_link_tag    "style.css" %>

  </head>

  <body>
    <!-- Navbar -->
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <img id="logo" class="pull-left" src="/assets/logonyu.png">
        <form class="navbar-search pull-left">
          <input id="search" type="text" class="span6 input-xxlarge search-query" placeholder="Search">
        </form>
        <% if current_user %>
          <a id="login" class="nav-button btn btn-success pull-right">Logout</a>
        <% else %>
          <a id="login" class="nav-button btn btn-primary pull-right" href="/auth/nyu/create">Login</a> 
        <% end %>
        <div class="nav-collapse collapse">
          <a class="nav-button btn pull-right">FAQ</a> 
          <% if current_user %>
            <img id="display-image" class="pull-right img-polaroid" src="<%= current_user.display_image %>" class="pull-right">
            <h5 id="user-name" class="pull-right"><%= current_user.name %></h5>
          <% end %>
        </div>
      </div>
    </div>
    <!-- End Navbar -->
    <div id="main">
      <div id="overlay">
        <div id="blackout"></div>
        <div class="span12" id="prompt">Hello!!!!
          <img id="exit" src="/assets/exit.png" onclick="hideOverlay()" />
        </div>
      </div>
      <%= yield %>
    </div>
    <!-- Begin Modal -->
    <!-- Modal -->
    <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Modal header</h3>
      </div>
      <div class="modal-body">
        <p>One fine body…</p>
      </div>
      <div class="modal-footer">
        <span id="modal-attend" class="pull-left"></span>
        <button id="modal-cancel" class="btn pull-left" data-dismiss="modal" aria-hidden="true">Close</button>
      </div>
    </div>
    <!-- End Modal -->
    <!-- Le javascript
         ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/assets/jquery.js" type="text/javascript"></script>
    <%= javascript_include_tag "jquery.masonry.min.js" %>
    <%= javascript_include_tag "jquery-ui-1.10.2.custom.js" %>
    <%= javascript_include_tag "base.js" %>
    <%= javascript_include_tag "bootstrap.js" %>

  </body>
</html>
