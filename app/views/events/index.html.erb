 <% Event.all.each do |event| %> 
            <div class="span4"> 
              <img style="float:left;max-width:50px" alt="School" src="<%= event.user.school.image %>" />
              <img style="float:left;max-width:50px" alt="School" src="<%= event.user.display_image %>" />
              <div style="clear:both;">
              <h2><%= event.name %></h2>
              <p> <%=event.start_time.strftime("%l:%M %p") %> - <%= event.end_time.strftime("%l:%M %p") %>  <br> 
               by <%= User.find(event.user_id).name %></p> 
              </div>
 
 
 
    <p><%= event.description %></p> 
    <form action="/attend" method="get">
      <input type="hidden" name="event_id" value="<%= event.id %>" />
      <input type="submit" value="Attend">
    </form>
  </div> 
<% end %> 

