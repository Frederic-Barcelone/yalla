<div id="content">
 <% Event.all.each do |event| %> 

  <!-- New Event -->

  <div style="position:relative;" class="span4 event-container">
    <div class="event-filter" style="background-size:cover; top: 0; opacity: 0.4; filter: alpha(opacity=40); position: absolute; background-image: url(http://www.mchenrybowl.com/PS%20Images/bowling.jpg); width: 100%; height: 100%; z-index: 2; " >
    </div>
    <div class="event-filter filter1" style="background-size:cover; top: 0; opacity: 0.7; filter: alpha(opacity=40); position: absolute;width: 100%; height: 100%; z-index: 3; " >
    </div>
    <div class="event-filter" style="position:relative; z-index: 4; top: 0; background: transparent;">
      <div class="container-fluid">
        <div class="row-fluid event-title-container">
          <div class="span12">
            <h2 class="event-title"> <%= event.name %> </h2>
          </div>
        </div>
        <div class="row-fluid event-detail-container">
          <div class="span12">
            <div class="row-fluid event-detail">
              <div class="span2">
                <i class="icon-calendar icon-large"></i>
              </div>
              <div class="span10">
                <h5 class="event-parameter"> <%= event.start_time.day %></h5>
              </div>
            </div>
            <div class="row-fluid event-detail">
              <div class="span2">
                <i class="icon-large icon-time"></i>
              </div>
              <div class="span10">
                <h5 class="event-parameter"> <%= event.start_time.hour %></h5>
              </div>
            </div>
            <div class="row-fluid event-detail">
              <div class="span2">
                <i class="icon-large icon-envelope"></i>
              </div>
              <div class="span10">
                <h5 class="event-parameter">Attendees: 9</h5>
              </div>
            </div>
            <div class="row-fluid event-detail">
              <div class="span2">
                <i class="icon-large icon-user"></i>
              </div>
              <div class="span10">
                <h5 class="event-parameter"> <%= event.user.name %></h5>
              </div>
            </div>
          </div>
        </div>
        <div class="row-fluid">
          <div class="span12 event-description">
            <span><%= event.description %></span>
          </div>
        </div>
        <div class="row-fluid button-container">
          <div class="span4">
            <a href="#" class="btn btn-primary">Attend</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- End Event -->

  <% end %> 
</div>

