<div id="content">
  <% Event.all.sort_by{|e| e.start_time}.each do |event| %> 

  <!-- New Event -->

  <div id="event-<%=event.id %>" style="position:relative;" class="span4 event-container">
    <div class="event-filter" style="background-size:cover; top: 0; opacity: 0.4; filter: alpha(opacity=40); position: absolute; background-image: url(http://www.mchenrybowl.com/PS%20Images/bowling.jpg); width: 100%; height: 100%; z-index: 2; " >
    </div>
    <div class="event-filter filter<%=rand(1..9) %>" style="background-size:cover; top: 0; opacity: 0.7; filter: alpha(opacity=40); position: absolute;width: 100%; height: 100%; z-index: 3; " >
    </div>
    <div id="event-details-container" class="event-filter" style="position:relative; z-index: 4; top: 0; background: transparent;">
      <div id="event-details" class="container-fluid">
        <div class="row-fluid event-title-container">
          <div class="span12">
            <h2 class="event-title"> <%= event.name %> </h2>
          </div>
        </div>
        <div class="row-fluid event-detail-container">
          <div class="span12">
            <div class="row-fluid event-detail">
              <div class="span2">
                <i class="icon-calendar icon-large"></i>
              </div>
              <div class="span10">
                <h5 class="event-parameter"> 
                  <%= event.start_time.advance(hours: 4).strftime("%A %e %B") %><%= " - " + event.end_time.advance(hours: 4).strftime("%A %e %B") if event.start_time.day != event.end_time.day %> 
                </h5>
              </div>
            </div>
            <div class="row-fluid event-detail">
              <div class="span2">
                <i class="icon-large icon-time"></i>
              </div>
              <div class="span10">
                <h5 class="event-parameter">  
                  <%= event.start_time.advance(hours:4).strftime("%l:%M %p") %> - <%= event.end_time.advance(hours: 4).strftime("%l:%M %p") %>
                </h5>
              </div>
            </div>
            <div class="row-fluid event-detail">
              <div class="span2">
                <i class="icon-large icon-envelope"></i>
              </div>
              <div class="span10">
                <h5 class="event-parameter">Attendees: 9</h5>
              </div>
            </div>
            <div class="row-fluid event-detail">
              <div class="span2">
                <i class="icon-large icon-user"></i>
              </div>
              <div class="span10">
                <h5 class="event-parameter"> <%= event.user.name %></h5>
              </div>
            </div>
          </div>
        </div>
        <div class="row-fluid">
          <div class="span12 event-description">
            <span><%= event.description %></span>
          </div>
        </div>
        <div class="row-fluid button-container">
          <span class="attend-btn"><a href="#" class="btn btn-primary event-btn" id="attend-btn" onClick="attendEvent(<%= event.id %>, <%= current_user.id if current_user %>); return false;" >Attend</a></span>
          <a href="/events/<%= event.id %>" role="button" data-target="#myModal" data-toggle="modal" class="btn event-btn" id="more-btn" onClick="changeHeader(<%= event.id %>)">See More</a>
        </div>
      </div>
    </div>
  </div>

  <!-- End Event -->

  <% end %> 
</div>

